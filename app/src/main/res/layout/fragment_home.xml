<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A73FF"
    tools:context=".Home">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:format12Hour="yyyy년MM월dd일\na hh:mm:ss"
        android:format24Hour="yyyy년MM월dd일\nHH:mm:ss"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:background="@drawable/round_botton"
        android:ems="10"
        android:inputType="text"
        android:textSize="20dp"
        android:text="그래도 해야지 어떡해!"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="80dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="209dp"
        android:layout_height="439dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="42dp"
        android:src="@drawable/img" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-134dp"
        android:layout_marginBottom="54dp"
        android:src="@drawable/img_1" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="50dp"
        android:translationX="-140dp"
        android:max="100"
        android:min="0"
        android:progress="3"
        android:rotation="270"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekthumb"/>


</RelativeLayout>